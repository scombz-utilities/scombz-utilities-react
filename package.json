{
  "name": "scombz-utilities",
  "displayName": "Scombz utilities",
  "version": "0.0.1",
  "description": "ScombZをカスタムする拡張機能",
  "author": "udai",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "plasmo dev --target=chrome-mv3",
    "dev:firefox": "plasmo dev --target=firefox-mv3",
    "build:chrome": "plasmo build --target=chrome-mv3",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "build": "npm run build:chrome && npm run build:firefox",
    "test": "plasmo test",
    "eslint": "eslint '**/*.ts?(x)'",
    "stylelint": "stylelint \"**/*.{css,scss}\""
  },
  "dependencies": {
    "@fontsource/roboto": "^5.0.8",
    "@plasmohq/storage": "^1.8.0",
    "plasmo": "^0.84.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.46.2"
  },
  "devDependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@mui/lab": "^5.0.0-alpha.145",
    "@mui/material": "^5.14.10",
    "@plasmohq/messaging": "^0.5.0",
    "@types/chrome": "0.0.245",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "node-sass": "^9.0.0",
    "prettier": "^3.0.3",
    "react-icons": "^4.11.0",
    "stylelint": "^15.10.3",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-scss": "^5.2.1",
    "typescript": "5.2.2"
  },
  "manifest": {
    "host_permissions": [
      "https://yudai1204.github.io/",
      "https://scombz-utilities.com/"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
